pipeline{
    agent any
    tools{
        maven "maven3.8.6"
    }
    stages {
        stage('1Getcode'){
            steps{
                sh "echo 'cloning the latest application version' "
             git 'https://github.com/ChrisEwuola/paypal-application-1'
            }
        }
        stage('2Test+Build'){
            steps{
                sh "echo 'running JUnit-test-cases' "
                sh "echo 'testing must passed to create artifacts ' "
                sh "mvn clean package"
            }
        }
       /* stage('3CodeQuality'){
